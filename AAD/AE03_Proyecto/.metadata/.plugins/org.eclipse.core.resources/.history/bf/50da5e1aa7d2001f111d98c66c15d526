package com.blackjack.model;

public class Card {
    private String suit;  // Palo de la carta (bastos, copas, espadas, oros, clubs, diamonds, hearts, spades)
    private int points;   // Valor de la carta (1-10 para num√©ricas, 10 para figuras)
    private String base64Image;  // Imagen en formato base64 de la carta

    public Card(String suit, int points, String base64Image) {
        this.suit = suit;
        this.points = points;
        this.base64Image = base64Image;
    }

    public String getSuit() {
        return suit;
    }

    public void setSuit(String suit) {
        this.suit = suit;
    }

    public int getPoints() {
        return points;
    }

    public void setPoints(int points) {
        this.points = points;
    }

    public String getBase64Image() {
        return base64Image;
    }

    public void setBase64Image(String base64Image) {
        this.base64Image = base64Image;
    }

    @Override
    public String toString() {
        return "Card{" +
                "suit='" + suit + '\'' +
                ", points=" + points +
                ", base64Image='" + base64Image + '\'' +
                '}';
    }
}
