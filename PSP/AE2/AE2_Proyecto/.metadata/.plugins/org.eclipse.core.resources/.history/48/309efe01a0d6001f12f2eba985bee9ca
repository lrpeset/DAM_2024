package es.psp.ae2;

import java.io.BufferedReader;
import java.io.IOException;

public class ClientReceiverThread extends Thread {
    private BufferedReader in;

    public ClientReceiverThread(BufferedReader in) {
        this.in = in;
    }

    @Override
    public void run() {
        try {
            String message;
            while ((message = in.readLine()) != null) {
                // Mostrar mensajes en la consola
                String timestamp = "[" + java.time.LocalTime.now() + "] ";
                System.err.println(timestamp + message); // Cambiar a rojo para distinguir
            }
        } catch (IOException e) {
            System.err.println("Conexi√≥n perdida con el servidor: " + e.getMessage());
        }
    }
}
