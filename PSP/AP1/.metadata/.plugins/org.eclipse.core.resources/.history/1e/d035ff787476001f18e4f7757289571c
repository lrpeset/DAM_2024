package ejercicios;

import java.util.Scanner;

public class Ejercicio08 {
	public static void main(String[] args) {
		System.out.println("Escribe un número del 1 al 12 y te diré a qué mes corresponde: ");
		
		try(Scanner teclado = new Scanner(System.in)) {
			int mes = teclado.nextInt();
			
			if(mes == 1) {
				String mesCorrespondiente = "Enero";
			} else if (mes == 2) {
				String mesCorrespondiente = "Febrero";
			} else if (mes == 3) {
				String mesCorrespondiente = "Marzo";
			} else if (mes == 4) {
				String mesCorrespondiente = "Abril";
			} else if (mes == 5) {
				String mesCorrespondiente = "Mayo";
			} else if (mes == 6) {
				String mesCorrespondiente = "Junio";
			} else if (mes == 7) {
				String mesCorrespondiente = "Julio";
			} else if (mes == 8) {
				String mesCorrespondiente = "Agosto";
			} else if (mes == 9) {
				String mesCorrespondiente = "Septiembre";
			} else if (mes == 10) {
				String mesCorrespondiente = "Octubre";
			} else if (mes == 11) {
				String mesCorrespondiente = "Noviembre";
			} else if (mes == 12) {
				String mesCorrespondiente = "Diciembre";
			} else {
				System.out.println("Por favor introduce un número del 1 al 12");
			}
		}
	}
}
