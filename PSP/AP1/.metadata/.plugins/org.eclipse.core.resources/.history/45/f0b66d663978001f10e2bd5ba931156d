package ejercicios;

import java.util.Scanner;

public class Ejercicio28 {

	public class Vehículo {
		String tipo;
		String marca;
		String modelo;

		public Vehículo(String tipo, String marca, String modelo) {
			this.tipo = tipo;
			this.marca = marca;
			this.modelo = modelo;
		}

		public void mostrarInfo() {
			System.out.printf("Tipo: " + tipo, "Marca: " + marca, "Modelo: " + modelo);
		}
	}

	public class Main {
		public static void main(String[] args) {
			Vehículo[] vehículos = new Vehículo[5];
			Scanner teclado = new Scanner(System.in);
			
			for(int i= 0; i < vehículos.length; i++) {
				System.out.println("Introduce los atributos del vehículo " + (i + 1) + ":");
				
				System.out.println("Tipo: ");
				String tipo = teclado.nextLine();
				
				System.out.println("Marca: ");
				String marca = teclado.nextLine();
				
				System.out.println("Modelo: ");
				String modelo = teclado.nextLine();
				
				teclado.close();
				
				vehículos[i] = new Vehículo(tipo, marca, modelo);
			}
			
			System.out.println("\nInformación de los vehículos creados:");
			for (Vehículo vehículo : vehículos) {
				teclado.close();
			}
		}
	}
}