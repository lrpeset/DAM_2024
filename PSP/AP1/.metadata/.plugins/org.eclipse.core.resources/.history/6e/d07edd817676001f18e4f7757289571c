package ejercicios;

import java.util.Scanner;

public class Ejercicio10 {
	public static void main(String[] args) {

		System.out.print("Introduce un número del 1 al 12 y te diré el mes correspondiente: ");

		try (Scanner teclado = new Scanner(System.in)) {
			int numeroMes = teclado.nextInt();
			String mes = null;
			
			if(numeroMes <= 0 || numeroMes > 12) {
				switch (numeroMes) {
				case 1:
					mes = "Enero";
					break;
				case 2:
					mes = "Febrero";
					break;
				case 3:
					mes = "Marzo";
					break;
				case 4:
					mes = "Abril";
					break;
				case 5:
					mes = "Mayo";
					break;
				case 6:
					mes = "Junio";
					break;
				case 7:
					mes = "Julio";
					break;
				case 8:
					mes = "Agosto";
					break;
				case 9:
					mes = "Septiembre";
					break;
				case 10:
					mes = "Octubre";
					break;
				case 11:
					mes = "Noviembre";
					break;
				case 12:
					mes = "Diciembre";
					break;
				}
			}
			
			System.out.println("El mes correspondiente al número " + numeroMes + " es " + mes);
		}
	}
}
