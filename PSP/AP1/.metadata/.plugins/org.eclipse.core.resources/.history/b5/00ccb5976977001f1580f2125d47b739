package ejercicios;

import java.util.*;

public class Ejercicio22 {
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);

		boolean exit = false;
		
		ArrayList<String> nombres = new ArrayList<String>();
		
		
		while (exit != true) {
			
			for (int i = 0; i < nombres.length; i++) {

				System.out.println("Introduce los 5 nombres que quieras almacenar: ");
				System.out.print("Introduce el nombre " + (i + 1) + ": ");
				nombres.add() = teclado.nextLine();
				
				if(teclado.nextLine() == 0) {
					exit = true;
				}
			}

		}
		
		System.out.println("Los nombres introducidos son: ");

		for (int i = 0; i < nombres.length; i++) {
			System.out.println(nombres[i]);
		}

		teclado.close();
	}
}
